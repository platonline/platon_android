<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sale" />

        <Button
            android:id="@+id/btn_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture" />

        <Button
            android:id="@+id/btn_credit_void"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/credit_void" />

        <Button
            android:id="@+id/btn_get_trans_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_trans_status" />

        <Button
            android:id="@+id/btn_get_trans_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_trans_details" />

        <Button
            android:id="@+id/btn_recurring_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recurring_sale" />

        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule" />

        <Button
            android:id="@+id/btn_deschedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deschedule" />

        <Button
            android:id="@+id/btn_google_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/google_pay" />

        <Button
            android:id="@+id/btn_google_pay_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/google_pay_prod" />

    </LinearLayout>

</ScrollView>
